{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
        "@/contexts/*": ["contexts/*"],
      "@/lib/*": ["lib/*"],
      "@/public/*": ["public/*"],
      "@/types/*": ["types/*"]      // âœ… Add this line
    },
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "exclude": ["node_modules", ".next", "out"]
}
