{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.ns", "dom", "esnext"],
    "target": "ES2022"
  },
  "imports": {
    "std/server": "https://deno.land/std@0.224.0/http/server.ts",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.45.0"
  },
  "tasks": {
    "cache": "deno cache --reload --lock=lock.json --lock-write ./index.ts"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-import-prefix",
        "no-unused-vars",
        "no-explicit-any"
      ]
    }
  }
}
