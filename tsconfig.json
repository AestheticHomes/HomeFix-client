{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["react", "react-dom", "node", "google.maps"], // âœ… Added
    "jsx": "preserve",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "plugins": [{ "name": "next" }],
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/**/*.js",
    "components/**/*.js",
    "lib/**/*.js",
    "app/admin/pagebkp.js"
  ],
  "exclude": ["node_modules", "supabase/"]
}
